@model Web_Final_asp_mvc_6.Models.ModelView
@{
    ViewBag.Title = "Index";

}



<h2>Index</h2>
<hr />

<div class="row">
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item active">Kişi Listesi</li>
            @foreach (var x in Model.Kisiler)
            {
                <li class="list-group-item">
         <i class="bi bi-people"></i>   @(x.name+" "+x.surname) <span class="badge bg-success">@(x.age)</span>
                </li>
            }

        </ul>
    </div>
    <div class="col">
        <ul class="list-group">
            <li class="list-group-item active">Adres Listesi</li>
            @foreach (var y in Model.Adresler)
            {
                <li class="list-group-item">
           <i class="bi bi-house-door"></i> @(y.AdresBilgisi+" "+ y.Sehir) 
                </li>
            }

        </ul>
    </div>

</div>